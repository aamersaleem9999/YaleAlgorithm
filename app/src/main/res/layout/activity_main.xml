<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:gravity="center_horizontal|bottom"
        android:weightSum="1">

        <TextView
            android:text="NNZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_weight="0.38"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Nzero"
            android:layout_width="50dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Rows:"
                android:id="@+id/textView"
                />

            <EditText
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:id="@+id/Rows"
                android:layout_marginTop="35dp"
                android:textAlignment="center"/>


            <TextView
                android:layout_width="51dp"
                android:layout_height="25dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Columns:"
                android:id="@+id/textView2" />

            <EditText
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:id="@+id/Columns"
                android:layout_marginTop="35dp"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="447dp"
            android:weightSum="1"
            android:gravity="top"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matrix"
                    android:id="@+id/genMatrixButton"
                    android:layout_below="@+id/Rows"
                    android:layout_centerHorizontal="true"
                    android:onClick="generateMatrixButtonClicked"
                    android:nestedScrollingEnabled="false"
                    />

                <Button
                    android:text="clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
                    android:layout_weight="1"
                    android:onClick="clearButtonPressed" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yale"
                    android:id="@+id/genYaleButton"
                    android:onClick="generateYaleButtonClicked"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:gravity="center">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="A"
                    android:id="@+id/textView3"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="[ ]"
                    android:id="@+id/aTV"
                    android:gravity="center" />


                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="IA"
                    android:id="@+id/textView4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="[ ]"
                    android:id="@+id/iaTV"
                    android:gravity="center" />


                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="JA"
                    android:id="@+id/textView7"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="[ ]"
                    android:id="@+id/jaTV"
                    android:gravity="center" />

                <TextView
                    android:text="MATRIX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_weight="0.72"
                    tools:text="MATRIX"
                    android:textStyle="normal|bold"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="141dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/outputTV"
                    android:layout_marginTop="45dp"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>

</LinearLayout>

